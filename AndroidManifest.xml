<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ne.nissing.rakutencall"
    android:versionCode="16"
    android:versionName="3.2.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Mandatory permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional, but without them, you might get less ads and tracking could be less accurate -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.ne.nissing.rakutencall.contacts.IgnoreContactsSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.ne.nissing.rakutencall.preference.PreferenceActivity"
            android:label="@string/menu_setting" >
        </activity>
        <activity
            android:name="jp.ne.nissing.rakutencall.call.CallActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
                <action android:name="android.intent.action.CALL_PRIVILEGED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="tel" />
            </intent-filter>
        </activity>

        <!-- 広告関連 -->
        <meta-data
            android:name="ADBUDDIZ_PUBLISHER_KEY"
            android:value="45aeacd1-acc1-4f40-89e2-4ab6b378a11e" />
        <!-- meta-data
            android:name="ADBUDDIZ_TEST_MODE"
            android:value="true" /-->
        <!-- meta-data
            android:name="SHOW_ADBUDDIZ_LOG"
            android:value="true" /-->
     <activity android:name="com.purplebrain.adbuddiz.sdk.AdBuddizActivity" 
               android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
